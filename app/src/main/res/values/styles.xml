<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="homepageImage">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="copyrightStyle">
        <item name="android:textColor">@color/copyright_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="ActivityBanner">
        <item name="android:text">@string/history_banner</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14pt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="historyImage">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="historyText">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="about_info">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="listview_news_style">
        <item name="android:divider">@color/colorPrimary</item>
        <item name="android:dividerHeight">7dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="news_title_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="news_authored_by">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:titleMarginBottom">7dp</item>
    </style>

    <style name="news_description">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:titleMarginBottom">7dp</item>
    </style>

    <style name="news_image">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="news_url">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:titleMarginBottom">7dp</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="published_at_style">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:titleMarginBottom">7dp</item>
    </style>

    <style name="detail_url_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="floating_action_bar_style">
        <item name="android:layout_gravity">start|bottom</item>
        <item name="android:layout_marginLeft">@dimen/about_us_left</item>
        <item name="android:layout_marginBottom">@dimen/about_us_bottom</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:src">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="about_us_image">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

</resources>
