<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="homepageImage">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">60dp</item>
    </style>

    <style name="copyrightStyle">
        <item name="android:textColor">@color/copyright_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="ActivityBanner">
        <item name="android:text">@string/history_banner</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14pt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="historyImage">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="historyText">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="device_info">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="detail_style">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
